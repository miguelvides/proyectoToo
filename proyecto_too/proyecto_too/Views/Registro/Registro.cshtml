<div class="container col align-self-center text-center" style="width:50%">
    <main class="form-registro">
        <form method="post">
            <h1 class="h3 mb-3 fw-normal">Crear cuenta</h1>
            <div class="form-floating" style="margin:50px">
                <input type="email" name="txtEmail" class="form-control" id="floatingInputGrid" placeholder="">
                <label for="floatingInputGrid">Correo Electronico</label>
            </div>
            <div class="row g-2" style="margin:5%">
                <div class="col-md">
                    <div class="form-floating">
                        <input type="password" name="txtPassword" class="form-control" id="floatingInputGrid" placeholder="">
                        <label for="floatingInputGrid">Contraseña</label>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-floating">
                        <input type="password" name="txtConfirmarPassword" class="form-control" id="floatingInputGrid" placeholder="">
                        <label for="floatingInputGrid">Confirmar contraseña</label>
                    </div>
                </div>
            </div>
            <button class="w-50 btn btn-lg btn-primary" type="submit" name="btnRegistrarse">Registrarse</button>
        </form>
    </main>
</div>